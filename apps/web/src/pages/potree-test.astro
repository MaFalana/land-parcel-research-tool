---
import { HwcHeader } from "@hwc/header";
import { PotreeViewer } from "../components/PotreeViewer";
import "../styles/global.css";

const project = {
  _id: "2023-075-C",
  name: "Test Point Cloud",
  location: {
    lat: 40.0,
    lon: -86.0,
    z: 800
  },
  crs: {
    proj4: '+proj=tmerc +lat_0=37.5 +lon_0=-85.66666666666667 +k=0.999966667 +x_0=500000 +y_0=0 +datum=NAD83 +units=us-ft +no_defs'
  },
  cloud: {
    url: `https://hwctopodot.blob.core.windows.net/hwc-potree/2023-075-C/metadata.json`
  }
};

const mapTilerKey = import.meta.env.PUBLIC_MAPTILER_API_KEY || '';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{project.name} - HWC Potree Test</title>
  <style>
    :root {
      --hwc-red: #EE2F27;
      --hdr-bg: rgba(41, 44, 48, 0.95);
      --hdr-fg: #ffffff;
      --hdr-border: rgba(255, 255, 255, 0.1);
      --accent: #EE2F27;
      --header-h: 60px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #1a1c20;
      color: #ffffff;
      overflow: hidden;
    }

    .viewer-container {
      position: absolute;
      top: var(--header-h);
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: calc(100vh - var(--header-h));
    }
  </style>
</head>
<body>
  <HwcHeader title={project.name} />
  
  <div class="viewer-container">
    <PotreeViewer client:only="react" project={project} mapTilerKey={mapTilerKey} />
  </div>
</body>
</html>
