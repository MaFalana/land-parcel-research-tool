---
import "../styles/global.css";
import { HwcHeader } from "@hwc/header";
import { CountyMap } from "../components/CountyMap";

const mapTilerKey = import.meta.env.PUBLIC_MAPTILER_API_KEY;
const basePath = "/tools/land-parcel-automater";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/ico+xml" href={`${basePath}/favicon.ico`} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>HWC Engineering | Parcel Research Tool</title>
	</head>
	<body>
		<HwcHeader
			client:only="react"
			basePath={basePath}
			title="Parcel Research Tool"
		/>
		<main style="height: calc(100vh - 60px); padding: 0; background: #f0f0f0;">
			<CountyMap
				client:only="react"
				mapTilerKey={mapTilerKey}
				basePath={basePath}
			/>
		</main>
	</body>
</html>
